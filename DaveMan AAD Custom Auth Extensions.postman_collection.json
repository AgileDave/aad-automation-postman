{
	"info": {
		"_postman_id": "fefb833d-cc8f-454a-a21c-98bf3800ed69",
		"name": "DaveMan AAD Custom Auth Extensions",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
		"_exporter_id": "5706303"
	},
	"item": [
		{
			"name": "Get App-Only Access Token",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"if( pm.response.code == 200 )\r",
							"{\r",
							"    var json = JSON.parse(responseBody);\r",
							"    postman.setEnvironmentVariable(\"AppAccessToken\", json.access_token);\r",
							"    postman.setNextRequest( \"Create Named Locations\" );\r",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/x-www-form-urlencoded",
						"type": "text"
					},
					{
						"key": "SdkVersion",
						"value": "postman-graph/v1.0",
						"type": "text"
					}
				],
				"body": {
					"mode": "urlencoded",
					"urlencoded": [
						{
							"key": "grant_type",
							"value": "client_credentials",
							"type": "text"
						},
						{
							"key": "client_id",
							"value": "{{MgtClientID}}",
							"type": "text"
						},
						{
							"key": "client_secret",
							"value": "{{MgtSecret}}",
							"type": "text"
						},
						{
							"key": "scope",
							"value": "https://graph.microsoft.com/.default openid offline_access",
							"type": "text"
						}
					]
				},
				"url": {
					"raw": "https://login.microsoftonline.com/{{TenantID}}/oauth2/v2.0/token",
					"protocol": "https",
					"host": [
						"login",
						"microsoftonline",
						"com"
					],
					"path": [
						"{{TenantID}}",
						"oauth2",
						"v2.0",
						"token"
					]
				}
			},
			"response": []
		},
		{
			"name": "Get Custom Auth Extensions",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"if( pm.response.code == 200 )\r",
							"{\r",
							"    var json = JSON.parse(responseBody);\r",
							"    pm.environment.set(\"CustomAuthExt\", json.value[0].id);\r",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{AppAccessToken}}",
						"type": "text"
					},
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"url": {
					"raw": "https://graph.microsoft.com/beta/identity/customAuthenticationExtensions",
					"protocol": "https",
					"host": [
						"graph",
						"microsoft",
						"com"
					],
					"path": [
						"beta",
						"identity",
						"customAuthenticationExtensions"
					]
				}
			},
			"response": []
		},
		{
			"name": "Update Custom Auth Extension",
			"request": {
				"method": "PATCH",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{AppAccessToken}}",
						"type": "text"
					},
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\r\n    \"@odata.type\": \"#microsoft.graph.onTokenIssuanceStartCustomExtension\",\r\n    \"claimsForTokenConfiguration\": [\r\n        {\r\n            \"claimIdInApiResponse\": \"dateOfBirth\"\r\n        },\r\n        {\r\n            \"claimIdInApiResponse\": \"customRoles\"\r\n        },\r\n        {\r\n            \"claimIdInApiResponse\": \"apiVersion\"\r\n        },\r\n        {\r\n            \"claimIdInApiResponse\": \"correlationId\"\r\n        },\r\n        {\r\n            \"claimIdInApiResponse\": \"storeNumber\"\r\n        },\r\n        {\r\n            \"claimIdInApiResponse\": \"clientIp\"\r\n        }\r\n    ]\r\n}"
				},
				"url": {
					"raw": "https://graph.microsoft.com/beta/identity/customAuthenticationExtensions/{{CustomAuthExt}}",
					"protocol": "https",
					"host": [
						"graph",
						"microsoft",
						"com"
					],
					"path": [
						"beta",
						"identity",
						"customAuthenticationExtensions",
						"{{CustomAuthExt}}"
					]
				}
			},
			"response": []
		}
	]
}